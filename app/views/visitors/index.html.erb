<h1>Visitantes</h1>

<%= form_tag(visitors_path, method: :get) do %>
  <%= text_field_tag "search", nil, placeholder: "Pesquisa cpf" %>
  <%= submit_tag "Pesquisar", class: "btn btn-dark"%>
<% end %>
<br>
<table class="table table-striped">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>CPF</th>
      <th>RG</th>
      <th>Telefone</th>
      <th>Foto</th>
      <th colspam></th>
      <th colspam></th>
      <th colspam></th>
    </tr>
  </thead>
  <tbody>
    <% @visitors.each do |visitor| %>
      <tr>
        <td><%= visitor.id %></td>
        <td><%= visitor.description %></td>
        <td><%= visitor.cpf %></td>
        <td><%= visitor.rg %></td>
        <td><%= visitor.phone %></td>
        <td><%= image_tag(visitor.photo.to_s, size: "40x40", style: "border-radius: 30%") %></td>
        <td><%= link_to "Mostrar", visitor, class: "btn btn-dark" %></td>
        <td><%= link_to "Editar", edit_visitor_path(visitor), class: "btn btn-dark" %></td>
        <td><%= link_to "Apagar", visitor, method: :delete, class: "btn btn-dark", data: { confirm: "VocÃª tem certeza?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
